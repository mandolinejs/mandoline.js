{{!
  {{#each words as |word|}}
    <Word @word={{word}} />
  {{/each}}
--}}

<FlexSentence::Manager
  @sentence={{@sentence}}
  as |sentence_manager|
>

<Rdag as |rdag|>
  {{#each sentence_manager.words as |word_manager|}}
    <FlexSentence::Word
      @manager={{word_manager}}
      @rdag={{rdag}}
    />
  {{/each}}
</Rdag>

</FlexSentence::Manager>
