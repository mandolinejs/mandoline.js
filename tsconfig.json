{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
